<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnboardingAFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fragment_onboarding_a_imageview"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/onboarding_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_a_welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_a_imageview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_a_chatapp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChatApp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_a_welcome_textview" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_a_feelfree_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feel Free to Move Around"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_a_chatapp_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="465dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_onboarding_a_next_button"
        style="@style/getStartedButton"
        android:layout_width="200dp"
        android:text="Next"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_a_feelfree_textview"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>