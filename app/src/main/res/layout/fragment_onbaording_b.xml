<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnbaordingBFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fragment_onboarding_b_imageview"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:src="@drawable/onoarding_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_b_welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Friends"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_b_imageview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_b_chatapp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&amp;&amp;"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_b_welcome_textview" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_onboarding_b_feelfree_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have F"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_b_chatapp_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="465dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_onboarding_b_getstarted_button"
        style="@style/getStartedButton"
        android:layout_width="200dp"
        android:layout_marginTop="20dip"
        android:text="Get Started"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_onboarding_b_feelfree_textview"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>